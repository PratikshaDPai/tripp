<button class="hamburger" onclick="toggleSidebar()">
  <svg viewBox="0 0 100 80" width="40" height="40">
    <rect width="100" height="15"></rect>
    <rect y="30" width="100" height="15"></rect>
    <rect y="60" width="100" height="15"></rect>
  </svg>
</button>

<nav class="sidenav">
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/search">Search</a></li>

    <li>
      <a href="/trips">Trips</a>
      <ul class="trips-list">
        <% if (trips && trips.length > 0) { %> <% trips.forEach(trip => { %>
        <li>
          <a href="/trips/<%= trip._id %>" class="trip-nav-name"
            ><%= trip.name %></a
          >
          <ul class="days-list" style="display: none">
            <% if (trip.days && trip.days.length > 0) { %> <%
            trip.days.forEach(day => { %>
            <li>
              <a
                href="/trips/<%= trip._id %>/days/<%= day._id %>"
                class="days-list-item"
                ><%= day.name %></a
              >
            </li>
            <% }) %> <% } else { %>
            <li>No days available</li>
            <% } %>
          </ul>
        </li>
        <% }) %> <% } else { %>
        <li>No trips available</li>
        <% } %>
      </ul>
    </li>

    <% if (user) { %>
    <li id="sidenav-sign-out"><a href="/auth/sign-out">Sign Out</a></li>
    <% } else { %>
    <li id="sidenav-sign-in"><a href="/auth/sign-in">Sign In</a></li>
    <li id="sidenav-sign-up"><a href="/auth/sign-up">Sign Up</a></li>
    <% } %>
  </ul>
</nav>

<script defer src="/js/sidenav.js"></script>
