<!-- views/plants/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= plant.name %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1 class="plant-title"><%= plant.name %></h1>

      <img
        src="<%= plant.image %>"
        alt="<%= plant.name %>"
        class="plant-image"
        onerror='this.src="/assets/placeholder.svg"'
        alt="<%= plant.name %> image"
      />

      <p class="plant-description"><%= plant.description %></p>

      <div class="button-group">
        <form action="/plants/<%=plant._id%>?_method=DELETE" method="POST">
          <button type="submit" class="delete-button">
            Delete <%= plant.name %>
          </button>
        </form>
        <form action="/plants/<%=plant._id%>/edit" method="GET">
          <button type="submit" class="edit-button">
            Edit <%= plant.name %>
          </button>
        </form>
      </div>

      <a href="/plants" class="back-link">‚Üê Back to Plants</a>
    </div>
  </body>
</html>
