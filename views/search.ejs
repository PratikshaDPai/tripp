<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Search Results</title>
  </head>
  <body>
    <h1>Search Results</h1>
    <form action="/search/results" method="get">
      <input type="text" name="q" placeholder="Search for days" required />
      <button type="submit">Search</button>
    </form>

    <% if (results.length > 0) { %>
    <h2>Found <%= results.length %> Results</h2>
    <ul>
      <% results.forEach(result => { %>
      <li>
        <strong><%= result.day.name %></strong><br />
        <em>Trip: <%= result.trip.name %></em><br />
        <p><%= result.day.description %></p>
        <a href="/trips/<%= result.trip._id %>/<%= result.day._id %>"
          >View Day Details</a
        >
      </li>
      <% }) %>
    </ul>
    <% } else { %>
    <p>No results found.</p>
    <% } %>
  </body>
</html>
